{
    "playlists.enableLike": false,
    "playlists.enableComment": false,
    "playlists.enableRating": false,
    "playlists.enableGUICreate": false,
    "playlists.enableSonolusCreate": false,
    "playlists.exceptGUICreate": [],
    "playlists.exceptSonolusCreate": [],
    "playlists.pageSize.info": 5,
    "playlists.pageSize.list": 20,
    "playlists.pageSize.recommends": 5,
    "playlists.pageSize.community": 5,
    "playlists.info.sections": [
        {
            "title": "#NEWEST",
            "icon": "playlist",
            "filter": "",
            "order": "id DESC"
        },
        {
            "title": "#RANDOM",
            "icon": "playlist",
            "filter": "",
            "order": "RANDOM() ASC"
        }
    ],
    "playlists.details.sections": [
        
    ],
    "playlists.searches": [
        {
            "title": "#ADVANCED",
            "icon": "search",
            "type": "advanced",
            "options": [
                {
                    "query": "keywords",
                    "name": "#KEYWORDS",
                    "type": "text",
                    "placeholder": "#KEYWORDS_PLACEHOLDER"
                },
                {
                    "query": "artists",
                    "name": "#ARTISTS",
                    "type": "text",
                    "placeholder": "#ARTISTS_PLACEHOLDER"
                },
                {
                    "name": "Chapter",
                    "query": "chapter",
                    "type": "select",
                    "def": 0,
                    "values": [ 
                        "All", 
                        "Single", 
                        "Legacy", 
                        "Chapter 5", 
                        "Chapter 6", 
                        "Chapter 7", 
                        "Chapter 8", 
                        "Side story 1",
                        "Side story 2",
                        "Side story 3",
                        "SHINOBI SLASH",
                        "Paradigm: Reboot",
                        "CHUNITHM",
                        "Rotaeno",
                        "かめりあ",
                        "OverRapid",
                        "茶鸣拾贰律",
                        "姜米條",
                        "Lanota",
                        "KALPA",
                        "Muse Dash",
                        "WAVEAT",
                        "GOOD",
                        "HyuN",
                        "Rising Sun Traxx"
                    ]
                },
                {
                    "query": "random",
                    "name": "#RANDOM",
                    "type": "toggle",
                    "def": 0
                }
            ],
            "filter": "(name LIKE \"%{{keywords}}%\" OR title LIKE \"%{{keywords}}%\" OR subtitle LIKE \"{{keywords}}\" OR author LIKE \"{{keywords}}\") AND subtitle LIKE \"%{{artists}}%\" AND tags LIKE (CASE \"{{chapter}}\" WHEN \"All\" THEN \"%\" ELSE \"%{{chapter}}%\" END)",
            "order": "CASE {{random}} WHEN 0 THEN id WHEN 1 THEN RANDOM() END DESC"
        }
    ],
    "playlists.creates": [
        {
            "title": "#ADVANCED",
            "icon": "plus",
            "type": "advanced",
            "options": [
                {
                    "query": "name",
                    "name": "#NAME",
                    "type": "text",
                    "placeholder": "#NAME_PLACEHOLDER",
                    "required": true
                },
                {
                    "query": "title",
                    "name": "#TITLE",
                    "type": "text",
                    "placeholder": "#TITLE_PLACEHOLDER",
                    "required": true
                },
                {
                    "query": "subtitle",
                    "name": "#SUBTITLE",
                    "type": "text",
                    "placeholder": "#SUBTITLE_PLACEHOLDER"
                },
                {
                    "query": "author",
                    "name": "#AUTHOR",
                    "type": "text",
                    "placeholder": "#AUTHOR_PLACEHOLDER"
                },
                {
                    "query": "levels",
                    "name": "Levels",
                    "type": "text",
                    "placeholder": "Enter levels..."
                },
                {
                    "query": "description",
                    "name": "Description",
                    "type": "textArea",
                    "placeholder": "Enter description..."
                },
                {
                    "query": "tags",
                    "name": "Tags",
                    "type": "text",
                    "placeholder": "Enter tags..."
                },
                {
                    "query": "localization",
                    "name": "Localization",
                    "type": "localizationItem"
                }, 
                {
                    "query": "thumbnail",
                    "name": "Thumbnail",
                    "type": "file",
                    "required": true
                }
            ],
            "values": {
                "name": "{{name}}",
                "title": "{{title}}",
                "subtitle": "{{subtitle}}",
                "author": "{{author}}",
                "levels": "{{levels}}",
                "description": "{{description}}",
                "tags": "{{tags}}",
                "localization": "{{localization}}",
                "thumbnail": "{{thumbnail}}"
            },
            "constructs": {
                "name": "\"{{name}}\"",
                "title": "\"{{title}}\"",
                "subtitle": "\"{{subtitle}}\"",
                "author": "\"{{author}}\"",
                "levels": "\"\"",
                "description": "\"{{description}}\"",
                "tags": "\"{{tags}}\"",
                "localization": "\"{{localization}}\"",
                "thumbnail": "\"{{thumbnail.hash}}\""
            }
        }
    ],
    "playlists.leaderboards": []
}